{
  "name": "skyway",
  "version": "0.4.0",
  "description": "An express routing library that leverages swagger (open api) definitions to validate incoming and outgoing data.",
  "main": "lib/index.js",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "npm run test:unit",
    "posttest": "npm run test:coverage",
    "test:lint": "./node_modules/.bin/eslint . --ignore-path=.gitignore",
    "test:unit": "NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha",
    "test:coverage": "./node_modules/.bin/istanbul check-coverage",
    "test:coverage:report": "open coverage/lcov-report/index.html",
    "test:coverage:codeclimate": "cat ./coverage/lcov.info | ./node_modules/.bin/codeclimate-test-reporter"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ksmithut/skyway.git"
  },
  "keywords": [
    "swagger",
    "openapi",
    "express",
    "validation"
  ],
  "author": "ksmithut",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ksmithut/skyway/issues"
  },
  "homepage": "https://github.com/ksmithut/skyway#readme",
  "eslintConfig": {
    "extends": [
      "ksmithut",
      "ksmithut/node",
      "ksmithut/es6-node",
      "ksmithut/mocha"
    ],
    "rules": {
      "max-statements": [
        "error",
        15
      ]
    }
  },
  "dependencies": {
    "ajv": "^4.11.3",
    "bluebird": "^3.4.7",
    "cors": "^2.8.1",
    "csv-parse": "^1.2.0",
    "debug": "^2.6.1",
    "express": "^4.14.1",
    "http-errors": "^1.6.1",
    "lodash": "^4.17.4",
    "swagger-parser": "^3.4.1",
    "swagger-ui": "^2.2.10"
  },
  "devDependencies": {
    "body-parser": "^1.16.1",
    "busboy": "^0.2.14",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-spies": "^0.7.1",
    "codeclimate-test-reporter": "^0.4.1",
    "eslint": "^3.16.1",
    "eslint-config-ksmithut": "^2.3.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "supertest": "^3.0.0"
  }
}
